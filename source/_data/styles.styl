.post-info {
    margin-top: -50px;
    text-align: center;
}

.reply-separator {
    border: 1px solid #ddd;
    height: 0;
    margin: 10px 0;
}

.reply .reply-header .reply-verified {
    /* cscore 原版助教认证 */
    float: right;
    background-color: #4caf50;
    color: #fff;
    padding: 0 0.75em;
    border-radius: 1em;
}

.reply .reply-text {
    clear: both;
    padding: 0 20px;
}

.reply .reply-footer .reply-vote {
    float: right;
}
