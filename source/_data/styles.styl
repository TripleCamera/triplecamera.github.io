.post-info {
    margin-top: -50px;
    margin-bottom: 20px;
    text-align: center;
}

.post-info .post-tag {
    display: inline-block;
    background-color: #c5cae9;
    color: #000;
    margin: 0 0.25em;
    padding: 0 0.75em;
    border-radius: 1em;
}

.reply-separator {
    border: 1px solid #ddd;
    height: 0;
    margin: 10px 0;
}

/* 目前为止最多只到 l4 :D */
.reply.reply-l1 {
    margin-left: 40px;
}

.reply.reply-l2 {
    margin-left: 80px;
}

.reply.reply-l3 {
    margin-left: 120px;
}

.reply.reply-l4 {
    margin-left: 160px;
}

.reply .reply-header .reply-verified {
    /* cscore 原版助教认证 */
    float: right;
    background-color: #4caf50;
    color: #fff;
    padding: 0 0.75em;
    border-radius: 1em;
}

.reply .reply-text {
    clear: both;
    padding: 0 20px;
}

.reply .reply-text pre {
    tab-size: 4;
}

.reply .reply-text img {
    margin-bottom: 0;
}

.reply .reply-footer .reply-vote {
    float: right;
}
